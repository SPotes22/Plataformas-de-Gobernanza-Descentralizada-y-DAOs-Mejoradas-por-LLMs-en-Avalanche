# docker/Dockerfile.kafka-producer (CORREGIDO)
FROM python:3.9-slim

WORKDIR /app

RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# ✅ Requirements ahora en mismo directorio
COPY requirements-kafka.txt .

RUN pip install --no-cache-dir -r requirements-kafka.txt

# ✅ Scripts desde contexto padre
COPY scripts/ ./scripts/

CMD ["python", "scripts/kafka_producer.py"]
