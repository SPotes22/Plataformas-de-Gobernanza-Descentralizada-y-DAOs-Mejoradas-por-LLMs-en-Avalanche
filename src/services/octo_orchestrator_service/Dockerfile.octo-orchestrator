# Dockerfile.octo-orchestrator
FROM python:3.11-slim

WORKDIR /app

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements
COPY requirements-kafka.txt .
RUN pip install --no-cache-dir -r requirements-kafka.txt

# Copiar todos los scripts del orchestrator
COPY . .

# Health check espec√≠fico para orchestrator
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:5004/health || exit 1

EXPOSE 5004

CMD ["python", "octo_orchestrator_service.py"]
